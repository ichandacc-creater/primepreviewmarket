rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Products uploads: suppliers upload into products/{supplierId}/{productId}/...
    match /products/{supplierId}/{productId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == supplierId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == supplierId;
    }

    // Default deny
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
