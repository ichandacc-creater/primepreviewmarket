rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection: users can read their own profile, admins can read/write
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userRole == 'admin');
      allow write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userRole == 'admin');
    }

    // Products: suppliers can create products with their supplierId, anyone can read
    match /products/{productId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.supplierId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.supplierId == request.auth.uid;
    }

    // Orders: only the supplier related or admin can read/write
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.supplierId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userRole == 'admin');
      allow update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userRole == 'admin';
    }

  }
}
